@model IEnumerable<Cricket.Models.tblPlayer1>
    @using Cricket.Models

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2> 

@foreach (var item in Model)
{
    <table style="width:50%" align="left">
    <tr><td>

    <a title="@item.PlayerName" href="@Url.Action("PlayersDetails", new { name = item.PlayerName })">
    <img src="@Url.Content(@item.PlayerPhoto)" style="border-radius:50%" height="75px" width="75px" />
        </a>
    @Html.ActionLink(@item.PlayerName, "PlayersDetails", new { name = item.PlayerName })
    </td></tr>
    </table>
}

<p>&nbsp;</p>

<div>
   <button class="btn-default"><b>@Html.ActionLink("Add New Player", "AddPlayer")</b></button>
    <button class="btn-default"><b>@Html.ActionLink("Back", "Index")</b></button>

    </div>

